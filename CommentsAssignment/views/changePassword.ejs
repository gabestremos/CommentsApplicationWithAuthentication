<!DOCTYPE html>
<html>
  <head>
    <!-- Standard Meta -->
    <meta charset="utf-8" />
    <meta http-equiv="X-UA-Compatible" content="IE=edge,chrome=1" />
    <meta
      name="viewport"
      content="width=device-width, initial-scale=1.0, maximum-scale=1.0"
    />

    <title>Change password</title>

    <link
      rel="stylesheet"
      type="text/css"
      href="https://cdnjs.cloudflare.com/ajax/libs/semantic-ui/2.4.1/semantic.min.css"
    />
    <style type="text/css">
      body {
        background-color: lightgrey;
      }
      body > .grid {
        height: 100%;
      }

      .column {
        max-width: 450px;
      }
    </style>
  </head>
  <body class="container">
    <div class="ui container">
      <div class="ui mini menu">
        <a class="  item" href="/listThreads">
          <img class="ui tiny image" src="/images/boy.png"
        /></a>
        <h3 class="item header">
          <%=user.username%>
        </h3>
        <div class="right menu">
          <div class="item">
            <a class="ui primary" href="/logout"
              ><i class="sign-out icon large"></i
            ></a>
          </div>
        </div>
      </div>
      <div class="ui middle aligned center aligned grid  ">
        <div class="column">
          <h2 class="ui blue image header">
            <div class="content">Change password</div>
          </h2>
          <form
            class="ui large form"
            action="/changePassword/<%=user._id%>"
            method="POST"
          >
            <div class="ui stacked segment">
              <div class="field">
                <div class="ui left icon input">
                  <i class="lock icon"></i>
                  <input
                    type="password"
                    name="oldpassword"
                    id="oldpassword"
                    placeholder="Old Password"
                  />
                </div>
              </div>
              <div class="field">
                <div class="ui left icon input">
                  <i class="lock icon"></i>
                  <input
                    type="password"
                    name="newpassword"
                    id="newpassword"
                    placeholder="New Password"
                  />
                </div>
              </div>
              <div class="field">
                <div class="ui left icon input">
                  <i class="lock icon"></i>
                  <input
                    type="password"
                    name="newconfpassword"
                    id="newconfpassword"
                    placeholder="Confirm New Password"
                  />
                </div>
              </div>
              <% if (err){%>
              <div class="ui error form">
                <div class="ui message">
                  <div class="header"><%=err%></div>
                </div>
              </div>

              <%}%>
              <div class="ui bottom attached buttons">
                <button class="ui  large inverted blue button" type="submit">
                  Save
                </button>
                <div class="or"></div>
                <a
                  class="ui  large inverted secondary button"
                  href="/listThreads"
                  >Cancel</a
                >
              </div>
            </div>
          </form>
        </div>
      </div>
    </div>
    <script
      src="https://code.jquery.com/jquery-3.4.1.slim.js"
      integrity="sha256-BTlTdQO9/fascB1drekrDVkaKd9PkwBymMlHOiG+qLI="
      crossorigin="anonymous"
    ></script>
    <script src="https://cdnjs.cloudflare.com/ajax/libs/semantic-ui/2.4.1/semantic.js"></script>
    <script>
      $(".ui.form").form({
        inline: true,
        fields: {
          oldpassword: {
            identifier: "oldpassword",
            rules: [
              {
                type: "empty",
                prompt: "Please enter your old password"
              }
            ]
          },
          newpassword: {
            identifier: "newpassword",
            rules: [
              {
                type: "match[newconfpassword]",
                prompt: "Passwords do not match!"
              },
              {
                type: "empty",
                prompt: "Please enter your new password"
              }
            ]
          },
          newconfpassword: {
            identifier: "newconfpassword",
            rules: [
              {
                type: "match[newpassword]",
                prompt: "Passwords do not match!"
              },
              {
                type: "empty",
                prompt: "Please confirm your new password"
              }
            ]
          }
        }
      });
    </script>
  </body>
</html>
